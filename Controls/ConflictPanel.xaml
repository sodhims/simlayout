<Window x:Class="LayoutEditor.Controls.ConflictPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Conflicts" Height="400" Width="500"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <StackPanel>
                <TextBlock Text="Layout Conflicts" FontSize="16" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="ConflictCountText" Text="0 conflicts found" FontSize="12" Foreground="#BDC3C7" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Conflict List -->
        <ListBox x:Name="ConflictListBox" Grid.Row="1"
                 SelectionChanged="ConflictListBox_SelectionChanged"
                 Margin="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" BorderBrush="#ECF0F1" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon -->
                            <TextBlock Grid.Column="0"
                                      Text="{Binding SeverityIcon}"
                                      FontSize="20"
                                      Foreground="{Binding SeverityColor}"
                                      VerticalAlignment="Top"
                                      Margin="0,0,10,0"/>

                            <!-- Content -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding TypeDisplay}" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,5,0,0" FontSize="11"/>
                                <TextBlock Text="{Binding SuggestedFix}" TextWrapping="Wrap" Margin="0,5,0,0" FontSize="10" Foreground="#7F8C8D" FontStyle="Italic"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <CheckBox x:Name="HideResolvedCheckbox" Content="Hide Acknowledged"
                         Checked="HideResolved_Changed" Unchecked="HideResolved_Changed"
                         VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button Content="Close" Click="Close_Click" Width="80" Padding="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
