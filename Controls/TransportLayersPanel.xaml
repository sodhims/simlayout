<UserControl x:Class="LayoutEditor.Controls.TransportLayersPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Active layer background -->
        <SolidColorBrush x:Key="ActiveLayerBrush" Color="#CCE8FF"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#E8E8E8"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#CCCEDB"/>

        <!-- Layer item style -->
        <Style x:Key="LayerItemStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Toggle button style -->
        <Style x:Key="LayerToggle" TargetType="CheckBox">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#E8E8E8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <TextBlock Text="TRANSPORT LAYERS" FontWeight="SemiBold" FontSize="11" Padding="8,6" Foreground="#1E1E1E"/>
        </Border>

        <!-- Layer List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="LayersList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource LayerItemStyle}"
                                x:Name="LayerBorder"
                                MouseLeftButtonDown="Layer_Click"
                                Tag="{Binding LayerType}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="26"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="26"/>
                                </Grid.ColumnDefinitions>

                                <!-- Visibility Checkbox -->
                                <CheckBox Grid.Column="0"
                                          Style="{StaticResource LayerToggle}"
                                          IsChecked="{Binding IsVisible, Mode=TwoWay}"
                                          Click="Visibility_Click"
                                          Tag="{Binding LayerType}"
                                          ToolTip="Toggle Visibility">
                                    <CheckBox.Content>
                                        <TextBlock Text="ðŸ‘" FontSize="12"/>
                                    </CheckBox.Content>
                                </CheckBox>

                                <!-- Color Indicator -->
                                <Rectangle Grid.Column="1"
                                           Width="12" Height="12"
                                           RadiusX="2" RadiusY="2"
                                           Stroke="#606060" StrokeThickness="0.5"
                                           VerticalAlignment="Center">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="{Binding ColorCode}"/>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <!-- Layer Name -->
                                <TextBlock Grid.Column="2"
                                           Text="{Binding Name}"
                                           VerticalAlignment="Center"
                                           FontSize="11"
                                           Margin="6,0,0,0"/>

                                <!-- Lock Checkbox -->
                                <CheckBox Grid.Column="3"
                                          Style="{StaticResource LayerToggle}"
                                          IsChecked="{Binding IsLocked, Mode=TwoWay}"
                                          Click="Lock_Click"
                                          Tag="{Binding LayerType}"
                                          ToolTip="Lock Layer">
                                    <CheckBox.Content>
                                        <TextBlock FontSize="11">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="ðŸ”“"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsLocked}" Value="True">
                                                            <Setter Property="Text" Value="ðŸ”’"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </CheckBox.Content>
                                </CheckBox>
                            </Grid>
                        </Border>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                <Setter TargetName="LayerBorder" Property="Background" Value="{StaticResource ActiveLayerBrush}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsVisible}" Value="False">
                                <Setter TargetName="LayerBorder" Property="Opacity" Value="0.5"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
