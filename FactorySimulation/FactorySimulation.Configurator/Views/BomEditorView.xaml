<UserControl x:Class="FactorySimulation.Configurator.Views.BomEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FactorySimulation.Configurator"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F0F0F0" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding BomHeader}"
                               FontSize="18"
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding VersionDisplay}"
                               FontSize="12"
                               Foreground="Gray"/>
                </StackPanel>

                <!-- Create BOM button (when no BOM exists) -->
                <Button Grid.Column="1"
                        Content="Create BOM"
                        Command="{Binding CreateBomCommand}"
                        Padding="15,8"
                        Visibility="{Binding CanCreateBom, Converter={StaticResource BoolToVisibility}}"/>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <ToolBar Grid.Row="1" Visibility="{Binding HasBom, Converter={StaticResource BoolToVisibility}}">
            <Button Content="Add Component"
                    Command="{Binding AddItemCommand}"
                    ToolTip="Add a component to this BOM"
                    Padding="10,2"/>
            <Button Content="Remove Selected"
                    Command="{Binding RemoveItemCommand}"
                    ToolTip="Remove the selected component"
                    Padding="10,2"/>
            <Separator/>
            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    ToolTip="Save changes to BOM"
                    Padding="10,2"/>
            <Separator/>
            <Button Content="Explode BOM"
                    Command="{Binding ExplodeCommand}"
                    ToolTip="Show full BOM explosion"
                    Padding="10,2"/>
            <Button Content="Where Used"
                    Command="{Binding ShowWhereUsedCommand}"
                    ToolTip="Show parent assemblies"
                    Padding="10,2"/>
        </ToolBar>

        <!-- Items Grid -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Items}"
                  SelectedItem="{Binding SelectedItem}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Margin="5"
                  Visibility="{Binding HasBom, Converter={StaticResource BoolToVisibility}}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Part Number"
                                    Binding="{Binding ComponentPart.PartNumber}"
                                    Width="120"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Part Name"
                                    Binding="{Binding ComponentPart.Name}"
                                    Width="*"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Quantity"
                                    Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                    Width="80"/>
                <DataGridTextColumn Header="Unit"
                                    Binding="{Binding UnitOfMeasure, UpdateSourceTrigger=PropertyChanged}"
                                    Width="60"/>
                <DataGridTextColumn Header="Notes"
                                    Binding="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                    Width="150"/>
                <DataGridTemplateColumn Header="" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="X"
                                    Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Width="24" Height="24"
                                    ToolTip="Remove this component"
                                    FontWeight="Bold"
                                    Foreground="Red"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Empty State -->
        <StackPanel Grid.Row="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding HasBom, Converter={StaticResource InverseBoolToVisibility}}">
            <TextBlock Text="No BOM Selected"
                       FontSize="18"
                       Foreground="Gray"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Select a part that can have a BOM to view or create one"
                       FontSize="12"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock>
                    <Run Text="{Binding Items.Count, Mode=OneWay}"/>
                    <Run Text=" component(s)"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
