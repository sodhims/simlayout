<Window x:Class="FactorySimulation.Configurator.Views.AddFamilyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Family"
        Width="400" Height="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Family Code -->
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Family Code:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="0" Grid.Column="1"
                 x:Name="FamilyCodeTextBox"
                 Margin="0,0,0,10"/>

        <!-- Name -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Name:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 x:Name="NameTextBox"
                 Margin="0,0,0,10"/>

        <!-- Category -->
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Category:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,10"/>
        <ComboBox Grid.Row="2" Grid.Column="1"
                  x:Name="CategoryComboBox"
                  SelectedIndex="1"
                  Margin="0,0,0,10">
            <ComboBoxItem Content="Raw Material" Tag="1"/>
            <ComboBoxItem Content="Component" Tag="2"/>
            <ComboBoxItem Content="Sub-Assembly" Tag="3"/>
            <ComboBoxItem Content="Finished Good" Tag="4"/>
        </ComboBox>

        <!-- Description -->
        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Description:"
                   VerticalAlignment="Top"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="3" Grid.Column="1"
                 x:Name="DescriptionTextBox"
                 Height="60"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,0,0,10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Create"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="CreateButton_Click"
                    IsDefault="True"/>
            <Button Content="Cancel"
                    Width="80"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
