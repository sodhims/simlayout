<Window x:Class="FactorySimulation.Configurator.Views.AddPartDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="DialogWindow"
        Title="Add New Part"
        Width="400" Height="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Part Number -->
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Part Number:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="0" Grid.Column="1"
                 x:Name="PartNumberTextBox"
                 IsEnabled="{Binding IsAddMode, ElementName=DialogWindow}"
                 Margin="0,0,0,10"/>

        <!-- Name -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Name:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 x:Name="NameTextBox"
                 Margin="0,0,0,10"/>

        <!-- Category -->
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Category:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,10"/>
        <ComboBox Grid.Row="2" Grid.Column="1"
                  x:Name="CategoryComboBox"
                  SelectedIndex="1"
                  Margin="0,0,0,10">
            <ComboBoxItem Content="Raw Material" Tag="RawMaterial"/>
            <ComboBoxItem Content="Component" Tag="Component"/>
            <ComboBoxItem Content="Sub-Assembly" Tag="SubAssembly"/>
            <ComboBoxItem Content="Finished Good" Tag="FinishedGood"/>
        </ComboBox>

        <!-- Unit of Measure -->
        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Unit:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,10"/>
        <ComboBox Grid.Row="3" Grid.Column="1"
                  x:Name="UnitComboBox"
                  SelectedIndex="0"
                  Margin="0,0,0,10">
            <ComboBoxItem Content="EA"/>
            <ComboBoxItem Content="KG"/>
            <ComboBoxItem Content="LB"/>
            <ComboBoxItem Content="M"/>
            <ComboBoxItem Content="FT"/>
            <ComboBoxItem Content="L"/>
            <ComboBoxItem Content="GAL"/>
        </ComboBox>

        <!-- Description -->
        <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Description:"
                   VerticalAlignment="Top"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="4" Grid.Column="1"
                 x:Name="DescriptionTextBox"
                 Height="60"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,0,0,10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="OkButton"
                    Content="Create"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="OkButton_Click"
                    IsDefault="True"/>
            <Button Content="Cancel"
                    Width="80"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
