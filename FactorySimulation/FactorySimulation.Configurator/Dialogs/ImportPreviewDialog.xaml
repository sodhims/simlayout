<Window x:Class="FactorySimulation.Configurator.Dialogs.ImportPreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:configurator="clr-namespace:FactorySimulation.Configurator"
        Title="Import Preview" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <configurator:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <StackPanel>
                <TextBlock Text="{Binding ProductName}" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="{Binding ProductId}" FontSize="12" Foreground="#CCFFFFFF" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- BOM Tree Preview -->
        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" Margin="10">
            <Grid>
                <TreeView x:Name="PreviewTreeView"
                          ItemsSource="{Binding PreviewTree}"
                          Background="#FAFAFA"
                          BorderThickness="0"
                          Padding="5">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="True"/>
                            <Setter Property="Padding" Value="2"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <Border CornerRadius="4" Padding="8,4" Margin="2"
                                    Background="{Binding NodeColor}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding PartNumber}"
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text=" - " Foreground="White" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding PartName}"
                                               Foreground="White"
                                               VerticalAlignment="Center"
                                               MaxWidth="300"
                                               TextTrimming="CharacterEllipsis"/>

                                    <!-- Editable Quantity -->
                                    <Border Background="#80FFFFFF" CornerRadius="3" Padding="4,1" Margin="10,0,0,0"
                                            Visibility="{Binding ShowQuantity, Converter={StaticResource BoolToVisibility}}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                                     Width="50"
                                                     FontSize="11"
                                                     BorderThickness="0"
                                                     Background="Transparent"
                                                     TextAlignment="Center"/>
                                            <TextBlock Text="{Binding UnitOfMeasure}"
                                                       FontSize="11"
                                                       Foreground="#666"
                                                       Margin="3,0,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <TextBlock Text="{Binding CategoryTag}"
                                               FontSize="10"
                                               Foreground="#CCFFFFFF"
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0"/>

                                    <!-- New/Existing indicator -->
                                    <Border Background="{Binding StatusColor}" CornerRadius="3" Padding="6,1" Margin="8,0,0,0">
                                        <TextBlock Text="{Binding StatusText}"
                                                   FontSize="9"
                                                   Foreground="White"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Grid>
        </Border>

        <!-- Summary -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10" Margin="10,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Total Parts" FontWeight="Bold" FontSize="11" Foreground="Gray"/>
                    <TextBlock Text="{Binding TotalParts}" FontSize="16"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="New Parts" FontWeight="Bold" FontSize="11" Foreground="Gray"/>
                    <TextBlock Text="{Binding NewParts}" FontSize="16" Foreground="#4CAF50"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Existing Parts" FontWeight="Bold" FontSize="11" Foreground="Gray"/>
                    <TextBlock Text="{Binding ExistingParts}" FontSize="16" Foreground="#FF9800"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Skip This Product" Click="SkipButton_Click"
                    Width="120" Height="30" Margin="5"
                    Background="#9E9E9E" Foreground="White" BorderThickness="0"/>
            <Button Content="Accept &amp; Import" Click="AcceptButton_Click"
                    Width="120" Height="30" Margin="5"
                    Background="#4CAF50" Foreground="White" BorderThickness="0"/>
            <Button Content="Cancel Import" Click="CancelButton_Click"
                    Width="120" Height="30" Margin="5"
                    Background="#f44336" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
