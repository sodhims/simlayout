<Window x:Class="LayoutEditor.Dialogs.AGVStationPropertiesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AGV Station Properties"
        Width="460" Height="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,12,0,8"/>
        </Style>
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Width" Value="120"/>
        </Style>
        <Style x:Key="FieldInput" TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="UnitLabel" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Width" Value="50"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="AGV Station Configuration" FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
            <TextBlock x:Name="StationNameHeader" Text="AGV Station 1" FontSize="12" Foreground="#7F8C8D" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,16,0,16">
            <StackPanel>

                <!-- Basic Info -->
                <TextBlock Text="Basic Information" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Name:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="NameInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Station Type:" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="StationTypeCombo" Grid.Column="1" Height="28">
                                <ComboBoxItem Content="Pickup" Tag="pickup"/>
                                <ComboBoxItem Content="Dropoff" Tag="dropoff"/>
                                <ComboBoxItem Content="Dual (Pickup/Dropoff)" Tag="dual"/>
                                <ComboBoxItem Content="Charging" Tag="charging"/>
                                <ComboBoxItem Content="Parking" Tag="parking"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Location -->
                <TextBlock Text="Location" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Position X:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="XInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="px" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Position Y:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="YInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="px" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Rotation:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="RotationInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="degrees" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Docking -->
                <TextBlock Text="Docking Configuration" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Dock Tolerance:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="DockingToleranceInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="inches" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Approach Angle:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="ApproachAngleInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="degrees" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Timing -->
                <TextBlock Text="Timing" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Service Time:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="ServiceTimeInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="seconds" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Dwell Time:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="DwellTimeInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="seconds" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Queue -->
                <TextBlock Text="Queue Configuration" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Queue Capacity:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="QueueCapacityInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="AGVs" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Priority:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="PriorityInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="(0-10)" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <CheckBox x:Name="IsBlockingCheck" Content="Block when queue full" Margin="0,4,0,4"/>
                        <CheckBox x:Name="IsHomingCheck" Content="Home station (AGVs return here when idle)"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="32"
                    Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button x:Name="OKButton" Content="OK" Width="80" Height="32"
                    IsDefault="True" Click="OK_Click"
                    Background="#3498DB" Foreground="White" BorderBrush="#2980B9"/>
        </StackPanel>
    </Grid>
</Window>
