<Window x:Class="LayoutEditor.Dialogs.ConveyorPropertiesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Conveyor Properties"
        Width="460" Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,12,0,8"/>
        </Style>
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Width" Value="120"/>
        </Style>
        <Style x:Key="FieldInput" TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="UnitLabel" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Width" Value="50"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Conveyor Configuration" FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
            <TextBlock x:Name="ConveyorNameHeader" Text="Conveyor 1" FontSize="12" Foreground="#7F8C8D" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,16,0,16">
            <StackPanel>

                <!-- Basic Info -->
                <TextBlock Text="Basic Information" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Name:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="NameInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Conveyor Type:" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="ConveyorTypeCombo" Grid.Column="1" Height="28">
                                <ComboBoxItem Content="Belt Conveyor" Tag="belt"/>
                                <ComboBoxItem Content="Roller Conveyor" Tag="roller"/>
                                <ComboBoxItem Content="Chain Conveyor" Tag="chain"/>
                                <ComboBoxItem Content="Overhead Conveyor" Tag="overhead"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Physical Properties -->
                <TextBlock Text="Physical Properties" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Width:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="WidthInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="inches" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Speed:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="SpeedInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="m/s" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Path Length:" Style="{StaticResource FieldLabel}"/>
                            <TextBlock x:Name="PathLengthLabel" Grid.Column="1" VerticalAlignment="Center" Foreground="#555"/>
                            <TextBlock Text="units" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Direction & Flow -->
                <TextBlock Text="Direction &amp; Flow" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Direction:" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="DirectionCombo" Grid.Column="1" Height="28">
                                <ComboBoxItem Content="Forward" Tag="forward"/>
                                <ComboBoxItem Content="Reverse" Tag="reverse"/>
                                <ComboBoxItem Content="Bidirectional" Tag="bidirectional"/>
                            </ComboBox>
                        </Grid>
                        <CheckBox x:Name="IsAccumulatingCheck" Content="Accumulating conveyor (items can queue)" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Connections -->
                <TextBlock Text="Node Connections" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="From Node ID:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="FromNodeInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="To Node ID:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="ToNodeInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Appearance -->
                <TextBlock Text="Appearance" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Color:" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="ColorInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                        <Border x:Name="ColorPreview" Grid.Column="2" Width="28" Height="28"
                                CornerRadius="4" Margin="8,0,0,0" BorderBrush="#CCC" BorderThickness="1"
                                Cursor="Hand" MouseLeftButtonDown="ColorPreview_Click"/>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="32"
                    Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button x:Name="OKButton" Content="OK" Width="80" Height="32"
                    IsDefault="True" Click="OK_Click"
                    Background="#3498DB" Foreground="White" BorderBrush="#2980B9"/>
        </StackPanel>
    </Grid>
</Window>
