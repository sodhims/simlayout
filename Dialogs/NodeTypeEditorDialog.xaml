<Window x:Class="LayoutEditor.Dialogs.NodeTypeEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Node Type Configuration" 
        Width="850" Height="550"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Node Type List -->
        <Border Grid.Column="0" Background="White" BorderBrush="#CCC" BorderThickness="1" Margin="0,0,10,0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Node Types" FontWeight="Bold" 
                           Background="#3498DB" Foreground="White" Padding="10,8"/>
                
                <StackPanel DockPanel.Dock="Top" Margin="8">
                    <TextBox x:Name="SearchBox" Margin="0,0,0,8" 
                             TextChanged="SearchBox_TextChanged"/>
                    <ComboBox x:Name="CategoryFilter" SelectionChanged="CategoryFilter_SelectionChanged">
                        <ComboBoxItem Content="All Categories" IsSelected="True"/>
                    </ComboBox>
                </StackPanel>
                
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="8">
                    <Button Content="âž• New" Width="70" Margin="0,0,4,0" Click="NewButton_Click"/>
                    <Button Content="ðŸ—‘ï¸ Delete" Width="70" Click="DeleteButton_Click"/>
                </StackPanel>
                
                <ListBox x:Name="NodeTypeList" Margin="8,0" SelectionChanged="NodeTypeList_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <Image x:Name="ItemIcon" Width="24" Height="24" Margin="0,0,8,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Key}" FontSize="10" Foreground="#888"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>
        
        <!-- Right Panel: Editor -->
        <Border Grid.Column="1" Background="White" BorderBrush="#CCC" BorderThickness="1">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Edit Node Type" FontWeight="Bold" 
                           Background="#2ECC71" Foreground="White" Padding="10,8"/>
                
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" 
                            HorizontalAlignment="Right" Margin="10">
                    <Button x:Name="SaveButton" Content="ðŸ’¾ Save" Width="100" IsEnabled="False"
                            Click="SaveButton_Click"/>
                </StackPanel>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="EditorPanel" Margin="15" IsEnabled="False">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Form Fields -->
                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="Type Key:" FontWeight="SemiBold"/>
                                <TextBox x:Name="KeyTextBox" Margin="0,0,0,8" TextChanged="Field_Changed"/>
                                
                                <TextBlock Text="Display Name:" FontWeight="SemiBold"/>
                                <TextBox x:Name="DisplayNameTextBox" Margin="0,0,0,8" TextChanged="Field_Changed"/>
                                
                                <TextBlock Text="Label (shown on node):" FontWeight="SemiBold"/>
                                <TextBox x:Name="LabelTextBox" Margin="0,0,0,8" TextChanged="Field_Changed"/>
                                
                                <TextBlock Text="Color:" FontWeight="SemiBold"/>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="ColorTextBox" Text="#3498DB" TextChanged="Field_Changed"/>
                                    <Border x:Name="ColorPreview" Grid.Column="1" Width="30" Height="24" 
                                            Background="#3498DB" BorderBrush="#999" BorderThickness="1"
                                            Margin="4,0,0,0" CornerRadius="2" Cursor="Hand"
                                            MouseLeftButtonDown="ColorPreview_Click"/>
                                </Grid>
                                
                                <TextBlock Text="Category:" FontWeight="SemiBold"/>
                                <ComboBox x:Name="CategoryComboBox" IsEditable="True" Text="General" 
                                          Margin="0,0,0,8" SelectionChanged="Field_Changed"/>
                                
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                        <TextBlock Text="Width:" FontWeight="SemiBold"/>
                                        <TextBox x:Name="WidthTextBox" Text="80" TextChanged="Field_Changed"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                        <TextBlock Text="Height:" FontWeight="SemiBold"/>
                                        <TextBox x:Name="HeightTextBox" Text="60" TextChanged="Field_Changed"/>
                                    </StackPanel>
                                </Grid>
                                
                                <TextBlock Text="Description:" FontWeight="SemiBold"/>
                                <TextBox x:Name="DescriptionTextBox" TextWrapping="Wrap" 
                                         AcceptsReturn="True" Height="50" TextChanged="Field_Changed"/>
                            </StackPanel>
                            
                            <!-- Icon Section -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Icon:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <Border Width="80" Height="80" Background="#F0F0F0" 
                                        BorderBrush="#CCC" BorderThickness="1" CornerRadius="4"
                                        Margin="0,0,0,8">
                                    <Image x:Name="IconPreview" Width="48" Height="48" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                
                                <ComboBox x:Name="IconComboBox" IsEditable="True" Text="machine" 
                                          Margin="0,0,0,4" SelectionChanged="IconComboBox_SelectionChanged"/>
                                
                                <Button Content="ðŸ“ Import..." Click="ImportIcon_Click" 
                                        Padding="8,4" Margin="0,0,0,8"/>
                                
                                <TextBlock Text="Preview:" FontWeight="SemiBold" Margin="0,8,0,4"/>
                                <Border Width="100" Height="70" Background="#FAFAFA" 
                                        BorderBrush="#CCC" BorderThickness="1">
                                    <Canvas x:Name="NodePreview" ClipToBounds="True"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</Window>
