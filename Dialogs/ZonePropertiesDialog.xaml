<Window x:Class="LayoutEditor.Dialogs.ZonePropertiesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zone Properties"
        Width="460" Height="540"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,12,0,8"/>
        </Style>
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Width" Value="110"/>
        </Style>
        <Style x:Key="FieldInput" TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="UnitLabel" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Width" Value="50"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Zone Configuration" FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
            <TextBlock x:Name="ZoneNameHeader" Text="Zone 1" FontSize="12" Foreground="#7F8C8D" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,16,0,16">
            <StackPanel>

                <!-- Basic Info -->
                <TextBlock Text="Basic Information" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Name:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="NameInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Zone Type:" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="ZoneTypeCombo" Grid.Column="1" Height="28">
                                <ComboBoxItem Content="Storage" Tag="storage"/>
                                <ComboBoxItem Content="Work Area" Tag="work"/>
                                <ComboBoxItem Content="Staging" Tag="staging"/>
                                <ComboBoxItem Content="Restricted" Tag="restricted"/>
                                <ComboBoxItem Content="Shipping" Tag="shipping"/>
                                <ComboBoxItem Content="Receiving" Tag="receiving"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Dimensions -->
                <TextBlock Text="Dimensions" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Position X:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="XInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="px" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Position Y:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="YInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="px" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Width:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="WidthInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="px" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Height:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="HeightInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="px" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <TextBlock x:Name="AreaLabel" Text="Area: 0 sq units" Foreground="#888" FontStyle="Italic" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Capacity -->
                <TextBlock Text="Capacity &amp; Restrictions" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Capacity:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="CapacityInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="units" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Max Occupancy:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="MaxOccupancyInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="people" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <CheckBox x:Name="IsRestrictedCheck" Content="Restricted Access Zone" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Appearance -->
                <TextBlock Text="Appearance" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Fill Color:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="FillColorInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <Border x:Name="FillColorPreview" Grid.Column="2" Width="28" Height="28"
                                    BorderBrush="#CCC" BorderThickness="1" CornerRadius="4" Margin="8,0,0,0"
                                    Cursor="Hand" MouseLeftButtonDown="FillColorPreview_Click"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Border Color:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="BorderColorInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <Border x:Name="BorderColorPreview" Grid.Column="2" Width="28" Height="28"
                                    BorderBrush="#CCC" BorderThickness="1" CornerRadius="4" Margin="8,0,0,0"
                                    Cursor="Hand" MouseLeftButtonDown="BorderColorPreview_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="32"
                    Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button x:Name="OKButton" Content="OK" Width="80" Height="32"
                    IsDefault="True" Click="OK_Click"
                    Background="#3498DB" Foreground="White" BorderBrush="#2980B9"/>
        </StackPanel>
    </Grid>
</Window>
