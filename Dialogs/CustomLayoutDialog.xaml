<Window x:Class="LayoutEditor.Dialogs.CustomLayoutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Layout Generator" Height="750" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Specify Entity Counts" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBlock Text="Enter the number of each type of entity to generate in the layout."
                       TextWrapping="Wrap" Foreground="Gray"/>
        </StackPanel>

        <!-- Entity Count Inputs -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Storage Section -->
                <GroupBox Header="Storage Entities" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Storage Bins:" VerticalAlignment="Center" Grid.Row="0"/>
                        <TextBox x:Name="StorageBinsBox" Text="20" Grid.Row="0" Grid.Column="1" Margin="5,2"/>

                        <TextBlock Text="Buffers:" VerticalAlignment="Center" Grid.Row="1"/>
                        <TextBox x:Name="BuffersBox" Text="5" Grid.Row="1" Grid.Column="1" Margin="5,2"/>
                    </Grid>
                </GroupBox>

                <!-- Equipment Section -->
                <GroupBox Header="Equipment" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Machines:" VerticalAlignment="Center" Grid.Row="0"/>
                        <TextBox x:Name="MachinesBox" Text="3" Grid.Row="0" Grid.Column="1" Margin="5,2"/>
                    </Grid>
                </GroupBox>

                <!-- AGV Section -->
                <GroupBox Header="AGV System" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="AGV Stations:" VerticalAlignment="Center" Grid.Row="0"/>
                        <TextBox x:Name="AGVStationsBox" Text="4" Grid.Row="0" Grid.Column="1" Margin="5,2"/>

                        <TextBlock Text="AGVs (Vehicles):" VerticalAlignment="Center" Grid.Row="1"/>
                        <TextBox x:Name="AGVsBox" Text="4" Grid.Row="1" Grid.Column="1" Margin="5,2"/>
                    </Grid>
                </GroupBox>

                <!-- Cranes Section -->
                <GroupBox Header="Overhead Transport" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="EOT Cranes:" VerticalAlignment="Center" Grid.Row="0"/>
                        <TextBox x:Name="EOTCranesBox" Text="2" Grid.Row="0" Grid.Column="1" Margin="5,2"/>

                        <TextBlock Text="Jib Cranes:" VerticalAlignment="Center" Grid.Row="1"/>
                        <TextBox x:Name="JibCranesBox" Text="3" Grid.Row="1" Grid.Column="1" Margin="5,2"/>
                    </Grid>
                </GroupBox>

                <!-- Layout Options -->
                <GroupBox Header="Layout Options" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="UseGridLayoutCheck" Content="Use grid layout with zones" IsChecked="False" Margin="0,5" Checked="GridLayout_Checked" Unchecked="GridLayout_Unchecked"/>
                        <CheckBox x:Name="GenerateAGVPathsCheck" Content="Auto-generate AGV path network" IsChecked="True" Margin="0,5"/>
                        <CheckBox x:Name="GenerateZonesCheck" Content="Auto-generate traffic zones" IsChecked="True" Margin="0,5"/>
                        <CheckBox x:Name="PlaceRandomlyCheck" Content="Randomize entity placement" IsChecked="False" Margin="0,5"/>

                        <!-- Zone Count -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Number of Zones:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="SimpleZoneCountBox" Grid.Column="1" Text="0" Width="100" HorizontalAlignment="Left"
                                     ToolTip="Number of traffic zones to create (0 = auto)"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Grid Layout Zone Configuration -->
                <GroupBox x:Name="ZoneConfigGroup" Header="Zone Configuration (Grid Layout)" Margin="0,0,0,10" IsEnabled="False">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Number of Zones:" VerticalAlignment="Center" Grid.Row="0"/>
                        <TextBox x:Name="ZoneCountBox" Text="4" Grid.Row="0" Grid.Column="1" Margin="5,2"/>

                        <TextBlock Text="Entities per Zone:" VerticalAlignment="Center" Grid.Row="1"/>
                        <TextBox x:Name="EntitiesPerZoneBox" Text="5" Grid.Row="1" Grid.Column="1" Margin="5,2" ToolTip="Storage bins + machines per zone"/>

                        <TextBlock Text="Zone Service Type:" VerticalAlignment="Center" Grid.Row="2"/>
                        <ComboBox x:Name="ZoneServiceCombo" Grid.Row="2" Grid.Column="1" Margin="5,2" SelectedIndex="0">
                            <ComboBoxItem Content="AGV (all zones)"/>
                            <ComboBoxItem Content="Jib Crane (all zones)"/>
                            <ComboBoxItem Content="EOT Crane (all zones)"/>
                            <ComboBoxItem Content="Mixed (alternate by zone)"/>
                        </ComboBox>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Generate" Width="100" Height="30" Margin="0,0,10,0" Click="Generate_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="100" Height="30" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
