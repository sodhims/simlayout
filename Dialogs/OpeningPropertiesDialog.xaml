<Window x:Class="LayoutEditor.Dialogs.OpeningPropertiesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Opening Properties"
        Width="480" Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,12,0,8"/>
        </Style>
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Width" Value="120"/>
        </Style>
        <Style x:Key="FieldInput" TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="UnitLabel" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Width" Value="50"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Opening Configuration" FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
            <TextBlock x:Name="OpeningNameHeader" Text="Door 1" FontSize="12" Foreground="#7F8C8D" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,16,0,16">
            <StackPanel>

                <!-- Basic Info -->
                <TextBlock Text="Basic Information" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Name:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="NameInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                        </Grid>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Opening Type:" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="OpeningTypeCombo" Grid.Column="1" Height="28">
                                <ComboBoxItem Content="Door" Tag="door"/>
                                <ComboBoxItem Content="Gate" Tag="gate"/>
                                <ComboBoxItem Content="Hatch" Tag="hatch"/>
                                <ComboBoxItem Content="Manhole" Tag="manhole"/>
                                <ComboBoxItem Content="Aisle" Tag="aisle"/>
                                <ComboBoxItem Content="Bay Entrance" Tag="bay_entrance"/>
                                <ComboBoxItem Content="Emergency Exit" Tag="emergency_exit"/>
                            </ComboBox>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="State:" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="StateCombo" Grid.Column="1" Height="28">
                                <ComboBoxItem Content="Open" Tag="open"/>
                                <ComboBoxItem Content="Closed" Tag="closed"/>
                                <ComboBoxItem Content="Locked" Tag="locked"/>
                                <ComboBoxItem Content="Emergency (Always Open)" Tag="emergency"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Location -->
                <TextBlock Text="Location" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Position X:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="XInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="px" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Position Y:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="YInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="px" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Rotation:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="RotationInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="degrees" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Physical Dimensions -->
                <TextBlock Text="Physical Dimensions" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Clear Width:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="ClearWidthInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="inches" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Clear Height:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="ClearHeightInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="inches" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Max Load Weight:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="MaxLoadInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="kg (0=∞)" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Flow Control -->
                <TextBlock Text="Flow Control" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Direction Mode:" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="DirectionCombo" Grid.Column="1" Height="28">
                                <ComboBoxItem Content="Bidirectional" Tag="bidirectional"/>
                                <ComboBoxItem Content="Inbound Only" Tag="inbound_only"/>
                                <ComboBoxItem Content="Outbound Only" Tag="outbound_only"/>
                            </ComboBox>
                        </Grid>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Capacity:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="CapacityInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="(0=∞)" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Traversal Time:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="TraversalTimeInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                            <TextBlock Text="seconds" Grid.Column="2" Style="{StaticResource UnitLabel}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Zone Connections -->
                <TextBlock Text="Zone Connections" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="4" Padding="12" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="From Zone ID:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="FromZoneInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="To Zone ID:" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="ToZoneInput" Grid.Column="1" Style="{StaticResource FieldInput}"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="32"
                    Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button x:Name="OKButton" Content="OK" Width="80" Height="32"
                    IsDefault="True" Click="OK_Click"
                    Background="#3498DB" Foreground="White" BorderBrush="#2980B9"/>
        </StackPanel>
    </Grid>
</Window>
